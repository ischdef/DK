<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/navigation_drawer_list_selector">


    <ImageView
        android:id="@+id/navigation_drawer_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/navigation_drawer_list_item_icon_description"
        android:src="@drawable/no_user_logo"
        android:layout_centerVertical="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/navigation_drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/navigation_drawer_icon"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:gravity="center_vertical"
        android:paddingRight="40dp"
        android:textColor="@color/navigation_drawer_item_text"
        android:text="Test" />

    <TextView android:id="@+id/navigation_drawer_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/counter_bg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:textColor="@color/navigation_drawer_item_counter"
        android:text="0" />

</RelativeLayout>