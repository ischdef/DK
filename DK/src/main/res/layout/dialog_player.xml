<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_player">
    <ImageView
        android:id="@+id/PlayerDialog_Image"
        android:src="@drawable/no_user_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:contentDescription="@string/dialog_player_image"
        android:clickable="true"
        android:padding="5dp"
        android:adjustViewBounds="true" />
    <EditText
        android:id="@+id/PlayerDialog_Name"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/dialog_player_name"
        android:layout_margin="4dp" />
</LinearLayout>